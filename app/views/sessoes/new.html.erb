<h1>Login</h1>

<p><%= alert %></p>

<%= form_for :sessao, url: :login do |form| %>
  <%= form.label "Email" %>
  <%= form.email_field :email %>

  <%= form.label "Senha" %>
  <!-- O Rails so identifica e oculta o atributo se,
    for chamado de password -->
  <%= form.password_field :password %>

  <%= form.submit "Entrar" %>
<% end %>
